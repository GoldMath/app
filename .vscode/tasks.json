{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and watch",
            "identifier": "build",
            "type": "shell",
            "command": "yarn",
            "args": ["dev"],
            "isBackground": true,
            // "problemMatcher": "$tsc-watch",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "run",
            "identifier": "run",
            "type": "shell",
            "command": "yarn",
            "args": ["electron"],
            "options": {
                "env": {
                    "DEBUG": "*"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}
