{
    "name": "r6db",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/r6db/app",
    "license": "MIT",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "yarn build --mode development && yarn electron",
        "electron": "electron --inspect=5858 build/main/",
        "migration": "ts-node --project tsconfig.node.json ./node_modules/.bin/typeorm migration:generate -n NewMigration",
        "dev": "npm-run-all -p watch:main watch:renderer",
        "watch:main": "webpack --mode development --config webpack/main.js --watch",
        "watch:renderer": "webpack-dev-server --mode development --config webpack/renderer.js",
        "prebuild": "rimraf build",
        "build": "cross-env NODE_ENV=production webpack --mode production --config webpack/all.js",
        "prelint": "pretty-quick --staged",
        "lint": "tslint -c tslint.json 'src/main/**/*.ts' -p tsconfig.node.json && tslint -c tslint.json 'src/renderer/**/*.ts' -p tsconfig.webpack.json",
        "test": "echo 'no tests yet' && exit 0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn test"
        }
    },
    "dependencies": {
        "@types/lodash": "^4.14.116",
        "bluebird": "^3.5.1",
        "debug": "^3.1.0",
        "electron": "^2.0.8",
        "electron-store": "^2.0.0",
        "electron-window-state": "^4.1.1",
        "express": "^4.16.3",
        "immer": "^1.6.0",
        "lodash": "^4.17.10",
        "node-fetch": "^2.2.0",
        "serve-static": "^1.13.2",
        "sqlite3": "^4.0.2",
        "typeorm": "^0.2.7"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-rc.3",
        "@babel/plugin-proposal-class-properties": "^7.0.0-rc.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.3",
        "@babel/plugin-syntax-class-properties": "^7.0.0-rc.3",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.3",
        "@babel/plugin-syntax-object-rest-spread": "^7.0.0-rc.3",
        "@babel/preset-env": "^7.0.0-rc.3",
        "@babel/preset-typescript": "^7.0.0-rc.3",
        "@types/bluebird": "^3.5.24",
        "@types/electron": "^1.6.10",
        "@types/express": "^4.16.0",
        "@types/node-fetch": "^2.1.2",
        "@types/serve-static": "^1.13.2",
        "autoprefixer": "^9.1.3",
        "awesome-typescript-loader": "^5.2.0",
        "babel-loader": "^8.0.0-beta.6",
        "cache-loader": "^1.2.2",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.0",
        "css-mqpacker": "^7.0.0",
        "cssnano": "^4.1.0",
        "electron-builder": "^20.28.2",
        "file-loader": "^2.0.0",
        "html-webpack-inline-source-plugin": "^0.0.10",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.0.0-rc.13",
        "jimp": "^0.3.7",
        "mini-css-extract-plugin": "^0.4.2",
        "node-sass": "^4.9.3",
        "npm-run-all": "^4.1.3",
        "postcss-discard-duplicates": "^4.0.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.14.2",
        "pretty-quick": "^1.6.0",
        "responsive-loader": "^1.1.0",
        "rimraf": "^2.6.2",
        "sass-loader": "^7.1.0",
        "sharp": "^0.20.7",
        "style-loader": "^0.22.1",
        "svg-sprite-loader": "^3.9.2",
        "svgo": "^1.0.5",
        "svgo-loader": "^2.1.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.7",
        "webpack-node-externals": "^1.7.2",
        "webpack-serve": "^2.0.2"
    }
}
